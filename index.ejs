<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Node JS - MySQL</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #755FAA; 
        }
        .table th {
            background-color: #6c757d; 
            color: white; 
        }
        .table td {
            background-color: #C8A1E0; 
        }
        .table-bordered {
            border: 2px solid #343a40; 
        }
        .table-bordered td,
        .table-bordered th {
            border: 2px solid #343a40; 
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Tabel Daftar User/Pengguna</h1>
        
        <div id="alertPlaceholder"></div> 

        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Email</th>
                    <th>Telepon</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(pengguna => { %>
                <tr>
                    <td><%= pengguna.id %></td>
                    <td><%= pengguna.name %></td>
                    <td><%= pengguna.email %></td>
                    <td><%= pengguna.phone %></td>
                    <td>
                        <a href="/edit/<%= pengguna.id %>" class="btn btn-warning">Edit</a>
                        <button class="btn btn-danger" onclick="confirmDelete('<%= pengguna.id %>')">Hapus</button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <h2>Tambah Pengguna Baru</h2>
        <form action="/add" method="post" onsubmit="return showAlert()">
            <div class="form-group">
                <label for="name">Nama:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="phone">Telepon:</label>
                <input type="tel" name="phone" id="phone" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Tambah</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function confirmDelete(userId) {
            const confirmation = confirm("Apakah Anda yakin ingin menghapus pengguna ini?");
            if (confirmation) {
                window.location.href = "/delete/" + userId;
                showAlert("Pengguna dihapus!", "success");
            }
        }

        function showAlert() {
            const alertPlaceholder = document.getElementById('alertPlaceholder');
            const alert = document.createElement('div');
            alert.className = 'alert alert-success alert-dismissible fade show';
            alert.role = 'alert';
            alert.innerText = 'Pengguna berhasil ditambahkan!';
            
            const closeButton = document.createElement('button');
            closeButton.type = 'button';
            closeButton.className = 'close';
            closeButton.setAttribute('data-dismiss', 'alert');
            closeButton.innerHTML = '&times;';
            alert.appendChild(closeButton);
            
            alertPlaceholder.appendChild(alert);
            return true; 
        }
    </script>
</body>
</html>
